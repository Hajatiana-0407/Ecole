{% extends 'admin_base.html.twig' %}

{% block title %}Frais -
	{{ titleMenu  }}
{% endblock %}

{% block body %}

	{# Modele #}
	<!-- Button to Open the Modal -->

	<!-- The Modal -->
		<div class="modal fade modal" id="myModal"> <div class="modal-dialog">
			<div
				class="modal-content" class='modal-edit'>
				<!-- Modal Header -->
				<div class="modal-header">
					<h4 class="modal-title">Modification
						<i class="fa-solid fa-pen"></i>
					</h4>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body">
					<turbo-frame id='update_frame'>
						<a href="{{ path('parametre_classe_edit' , { id:33 }) }}" id='link_update_frame'>link_update_frame</a>
					</turbo-frame>
				</div>
				<!-- Modal footer -->
				<div class="modal-footer boutton__">
					<button class='btn btn-info' type='submit'>
						<i class="fa-solid fa-pen-to-square"></i>
						Modifier
					</button>
				</div>
			</div>
		</div>
	</div>
	{# Modele #}


	{{ form_start( classe_form )}}
	{{ form_row( classe_form.niveau ) }}
	{{ form_row( classe_form.denomination ) }}
	<div class="boutton__">
		<button class='btn btn-info ' type='submit'>
			{% if id is defined %}
				<i class="fa-solid fa-pen-to-square"></i>
				Modifier
			{% else %}
				<i class="fa-solid fa-check"></i>
				Valider
			{% endif %}
		</button>
	</div>
	{{ form_end( classe_form )}}


	<h4>Liste des classes :
	</h4>
	<div class="table-container mt-3">
		<table class="table table-md">
			<thead class='table-dark'>

				<tr>
					<th>Denomination</th>
					<th>Niveau</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for data in datas %}
					<tr>
						<td>{{ data.denomination  }}</td>
						<td>{{ data.niveau.nom }}</td>
						<td>
							{# <a href="{{ path('parametre_classe_edit' , { id:data.id }) }}" class="btn btn-sm btn-outline-primary">
																						<i class="fa-solid fa-pen-to-square"></i>
																					</a> #}
							<a href="#" class="btn btn-sm btn-outline-primary edit" data-id='{{ data.id }}' data-bs-toggle="modal" data-bs-target="#myModal">
								<i class="fa-solid fa-pen-to-square"></i>
							</a>
							<form action="{{ path('parametre_classe_delete' , { id:data.id } ) }}" class="__delete_form">
								<input type="hidden" name='id' value='{{ data.id }}'>
								<button type="button" onclick='__delete( this , {{ data.id }} )' class="btn btn-sm btn-outline-danger">
									<i class="fa-solid fa-trash"></i>
								</button>
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="navigation ">
			{{ knp_pagination_render(datas) }}
		</div>
	</div>
{% endblock %}
