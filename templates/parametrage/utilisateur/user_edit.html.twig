{% extends 'admin_base.html.twig' %}
{% block title %}Utilisateur -
	{{ titleMenu  }}
{% endblock %}

{% block body %}
	<div class="form-add" id='__form__'>
		<div class="title-left">
			<h5>
				<i class="fa-solid fa-pen-to-square"></i>
				Modification Utilisateur
			</h5>
		</div>

		{{ form_start( form )}}
		<div class="form_user">
			<div class="form_user_input_container">
				{{ form_row( form.nom )}}
				{{ form_row( form.prenom )}}
				{{ form_row( form.telephone )}}
				{{ form_row( form.adresse )}}
			</div>
			<div class="form_user_profil_container">
				<div class='container_image' data-id='profile-image'>
					{% if photo_directory == '' %}
						<img src="{{ asset('images/photo-camera.png') }}" alt="">
					{% else %}
						<img src="{{ asset( photo_directory ) }}" alt="">
					{% endif %}

				</div>
				{{ form_errors( form.photo ) }}
				{# {{ form_widget( form.photo )}} #}
			</div>
		</div>
		<div class="d-none" id='profile-image'>
			{{ form_widget( form.photo )}}
		</div>

		{{ form_widget( form )}}

		<div class="boutton__">
			{% if annule_path is defined %}
				<a href='{{path( annule_path ) }}' class='btn btn-secondary'>
					<i class="fa fa-ban"></i>
					Annuler
				</a>
			{% endif %}
			<button class='btn btn-info ' type='submit'>
				<i class="fa-solid fa-pen-to-square"></i>
				Modifier
			</button>
		</div>
		{{ form_end( form )}}
		<script>
			$('#__form__ form input:first').focus();
		</script>
	</div>
{% endblock %}
