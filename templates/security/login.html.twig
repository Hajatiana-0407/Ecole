{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

	<div class="connexion">
		<div class="blender"></div>
		<div class='container'>
			<div class="connexion-container">
				<form method="post">
					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}
					<div class='form-title mb-3'>
						<h3>Connexion</h3>
					</div>
					<div class="form-group mb-3">
						<div class="icon-connexion">
							<i class="fa-regular fa-envelope"></i>
						</div>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder='Votre email' required autofocus>
					</div>
					<div class="form-group mb-3">
						<div class="icon-connexion">
							<i class="fa-solid fa-lock"></i>
						</div>
						<input type="password" name="password" id="inputPassword" placeholder='Mot de passe' class="form-control" autocomplete="current-password" required>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>
					<div class="form-error-ms">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
					</div>
					<button class="btn btn w-100 btn-info" type="submit">
						<span class='me-1'>
							<i class="fa-solid fa-right-to-bracket"></i>
						</span>
						Se connect√©
					</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
